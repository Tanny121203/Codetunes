<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?attr/selectableItemBackground">


    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/loading_logo"/>

    <TextView
        android:id="@+id/song_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Music"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artist_name"
        android:layout_toEndOf="@id/icon_view"
        android:layout_below="@id/song_title"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/circle_separator"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/song_artist"
        android:layout_marginStart="5dp"
        android:src="@drawable/baseline_circle_24"
        android:layout_below="@id/song_title"
        app:tint="@color/white"/>


    <TextView
        android:id="@+id/song_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/album"
        android:layout_toEndOf="@id/circle_separator"
        android:layout_below="@id/song_title"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        />


    <ImageButton
        android:id="@+id/song_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/song_menu"
        android:padding="10dp"/>

    <View
        android:id="@+id/line_separator_recycler"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_separator" />

</RelativeLayout>