<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    tools:context=".navigationfragments.PlaylistLibraryShowFragment">

    <RelativeLayout
        android:id="@+id/show_library_component1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/point_leftarrow"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_playlist"
            android:layout_toEndOf="@id/arrow_back"
            android:textColor="@color/musica_color"
            android:textSize="30sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/playlist_image_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_playlist_img"
            android:background="@android:color/transparent"
            android:layout_toEndOf="@id/playlist"
            android:layout_marginStart="30dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/component_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#302c2c2c"
        android:layout_below="@id/show_library_component1"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/play_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_playlist"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/shuffle_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shuffle_playlist"
            android:background="?attr/selectableItemBackground"
            android:layout_toEndOf="@id/play_playlist"
            android:layout_marginTop="14dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"/>

        <ImageButton
            android:id="@+id/option_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/charm_menu"
            android:background="?attr/selectableItemBackground"
            android:layout_toEndOf="@id/shuffle_playlist"
            android:layout_marginTop="20dp"
            android:padding="10dp"/>


        <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/play_playlist"
            android:layout_marginTop="10dp"
            android:background="@color/navicon_color"/>


        <!-- NO SONGS DISPLAY (start)-->
        <TextView
            android:id="@+id/show_no_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_songs_available"
            android:layout_centerInParent="true"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"/>

        <!-- TRACKS DISPLAY (start)-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/song_recyclerview"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_separator"
            android:layout_marginStart="10dp"
            tools:listitem="@layout/recycler_songs"/>
        <!-- TRACKS (end)-->

    </RelativeLayout>

</RelativeLayout>