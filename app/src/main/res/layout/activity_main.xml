<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/mini_player_container"
        android:layout_alignParentTop="true">
    </FrameLayout>
    <!-- TRACKS (end)-->



    <RelativeLayout
        android:id="@+id/mini_player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavigationView"
        android:background="@color/mini_player_background"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/mini_player_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/loading_logo"
            android:layout_marginStart="15dp" />

        <LinearLayout
            android:id="@+id/mini_player_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mini_player_thumbnail"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mini_player_song_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/musica_color"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"/>

            <TextView
                android:id="@+id/mini_player_artist_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/artist_name"
                android:layout_marginStart="10dp"
                android:textColor="@color/musica_color"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/mini_player_playpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mini_player_pause"
            android:background="?attr/selectableItemBackground"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:padding="15dp"/>

    </RelativeLayout>



    <!-- BOTTOM NAVIGATION (start)-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/nav_background_color"
        app:itemIconTint="@drawable/selected_icon"
        app:itemTextColor="@drawable/selected_icon"
        app:menu="@menu/bottom_navigation_menu"
        style="@style/Widget.MaterialComponents.BottomNavigationView"/>
    <!-- BOTTOM NAVIGATION (end)-->

</RelativeLayout>
