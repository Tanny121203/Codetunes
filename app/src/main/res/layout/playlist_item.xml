<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/default_playlist_img"/>

    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/playlist_image"
        android:layout_marginTop="17dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="@string/playlist_title"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/playlist_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlist_title"
        android:layout_toEndOf="@id/playlist_image"
        android:layout_marginStart="10dp"
        android:textSize="11sp"
        android:text="@string/playlist"
        android:textColor="@color/white"
        />

    <View
        android:id="@+id/line_separator_recycler"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_separator" />

</RelativeLayout>